{
  "name": "conductor",
  "version": "0.1.0",
  "description": "A Linux-first TUI music player with MPD control and AI-powered natural language commands",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "conductor": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.tsx",
    "dev:bun": "bun run --watch src/index.tsx",
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "build:bun": "bun build src/index.tsx --outdir dist --target bun",
    "start": "node dist/index.js",
    "start:bun": "bun run dist/index.js",
    "type-check": "tsc --noEmit",
    "setup": "tsx src/index.tsx --setup",
    "setup:bun": "bun run src/index.tsx --setup"
  },
  "keywords": [
    "music",
    "player",
    "tui",
    "mpd",
    "ai",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@github/copilot-sdk": "^0.1.17",
    "ai": "^3.0.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "ink": "^4.4.1",
    "mpc-js": "^2.0.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "bun-types": "^1.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
